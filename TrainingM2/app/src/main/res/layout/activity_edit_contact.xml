<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.andre.trainingm2.app.EditContactActivity">

    <ImageView
            android:layout_width="@dimen/width_image"
            android:layout_height="@dimen/height_image"
            android:id="@+id/editImageContact"
            android:layout_gravity="left|top"
            android:src="@drawable/default_thumb"/>


    <EditText
            android:layout_width="@dimen/position_name_edit"
            android:layout_height="wrap_content"
            android:id="@+id/editEditName"
            android:hint="@string/name"
            android:layout_toRightOf="@+id/editImageContact"/>
    <EditText
            android:layout_width="@dimen/position_number_edit"
            android:layout_height="wrap_content"
            android:id="@+id/editEditNumber"
            android:inputType="phone"
            android:hint="@string/phone"
            android:ems="10"
            android:layout_toRightOf="@+id/imageContact"
            android:layout_below="@+id/editEditName"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Save"
            android:id="@+id/save_buttonEdit"
            android:layout_below="@+id/editImageContact"/>


</RelativeLayout>
